
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int      @id @default(autoincrement())
  title         String
  slug          String   @unique
  isActive      Boolean  @default(true)
  lpDescription String
  lpContent     String
  lpStyles      String
  lpScripts     String
  createdAt     DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
}